[core]
  quotepath = false
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[color]
  ui = true

[color "branch"]
  current = yellow black
  local = yellow
  remote = magenta

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red reverse
  new = green reverse
  whitespace = white reverse

[color "status"]
  added = green
  changed = yellow
  untracked = cyan reverse
  branch = magenta
  
[alias]
  st = status
  co = checkout
  br = branch
  ci = commit
  gr = log --graph
  pom = push origin master
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit

[user]
  name = Riku Rouvila
  email = riku.rouvila@gmail.com
[push]
	default = current
